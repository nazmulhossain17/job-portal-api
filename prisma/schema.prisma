generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Candidate {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String    @unique
  password  String
  gender    String
  role      Role
  status    CandidateStatus?  @default(PENDING)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  appliedJobs Job[]   @relation("AppliedJobs")
   @@map("candidate")
}

model Admin {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
}

model Job {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  location    String
  salary      String
  companyName String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  recruiter   Recruiter @relation("RecruiterJobs", fields: [recruiterId], references: [id])
  recruiterId String    @db.ObjectId
  appliedBy   Candidate? @relation("AppliedJobs", fields: [appliedById], references: [id])
  appliedById String?   @db.ObjectId
}

model Recruiter {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String    @unique
  password  String
  gender    String
  role      Role      // No @default directive needed here
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  jobs      Job[]     @relation("RecruiterJobs")
  @@map("recruiters")
}

enum CandidateStatus {
  SHORTLISTED
  REJECTED
  SELECTED
  PENDING
}

enum Role {
  RECRUITER
  CANDIDATE
}